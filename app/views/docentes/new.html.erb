<h1>New docente</h1>

<% form_for(@docente) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nombre1 %><br />
    <%= f.text_field :nombre1 %>
  </p>
  <p>
    <%= f.label :nombre2 %><br />
    <%= f.text_field :nombre2 %>
  </p>
  <p>
    <%= f.label :apellido1 %><br />
    <%= f.text_field :apellido1 %>
  </p>
  <p>
    <%= f.label :apellido2 %><br />
    <%= f.text_field :apellido2 %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
	<%=
	    @sexos = Sexo.find(:all)
	    f.collection_select(:sexo_id, @sexos, :id, :descripcion )
	%>
    
  </p>
  <p>
    <%= f.label :cedula %><br />
    <%= f.text_field :cedula %>
  </p>
  <p>
    <%= f.label :fecha_nac %><br />
    <%= f.date_select :fecha_nac %>
  </p>
  <p>
    <%= f.label :lugar_nac %><br />
    <%= f.text_field :lugar_nac %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', docentes_path %>